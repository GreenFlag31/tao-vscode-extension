{
  "name": "node-tao-extension",
  "displayName": "node-tao extension",
  "description": "Official node-tao template engine extension",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "html",
        "scopeName": "text.html.tao",
        "path": "./src/tao.tmLanguage.json",
        "injectTo": [
          "text.html.basic"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
