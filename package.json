{
  "name": "tao-vscode-extension",
  "displayName": "tao-vscode-extension",
  "description": "Official node-tao template engine extension",
  "version": "0.0.3",
  "type": "module",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "publisher": "ManuC",
  "icon": "assets/node-tao.jpg",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/GreenFlag31/tao-vscode-extension.git"
  },
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript"
  ],
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/tao.tmLanguage.json",
        "scopeName": "source.tao",
        "injectTo": [
          "text.html"
        ]
      },
      {
        "scopeName": "source.tao.lightjs",
        "path": "./syntaxes/tao-light-js.tmLanguage.json",
        "injectTo": [
          "source.tao"
        ]
      }
    ]
  },
  "scripts": {
    "watch": "tsc -watch -p ./",
    "check-types": "tsc --noEmit",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "compile": "npm run check-types && node esbuild.js",
    "watch:esbuild": "node esbuild.js --watch",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
